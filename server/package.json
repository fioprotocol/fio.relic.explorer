{
  "name": "fastify-server",
  "version": "1.0.0",
  "description": "Fastify backend for fullstack application",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json && mkdir -p ./dist/shared && cp -r ../shared/* ./dist/shared/",
    "start": "node -r ./tsconfig-paths-bootstrap.js dist/server/src/index.js",
    "dev": "nodemon --watch 'src/**/*.ts' --watch '../shared/**/*.ts' --exec 'ts-node -r ./tsconfig-paths-bootstrap.js' src/index.ts"
  },
  "keywords": [
    "fastify",
    "backend",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "11.0.1",
    "@fastify/swagger": "9.4.2",
    "@fastify/swagger-ui": "5.2.2",
    "@fioprotocol/fiojs": "1.0.2",
    "dotenv": "16.4.7",
    "fastify": "5.3.2",
    "fastify-plugin": "5.0.1",
    "pg": "8.14.1",
    "pino": "9.6.0",
    "pino-pretty": "13.0.0"
  },
  "devDependencies": {
    "@types/node": "22.13.13",
    "@types/pg": "8.10.9",
    "nodemon": "3.1.0",
    "tsconfig-paths": "4.2.0",
    "ts-node": "10.9.2"
  }
}
