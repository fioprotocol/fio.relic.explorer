
services:
  fio-server:
    image: {{ IMAGE_PREFIX_SERVER }}:{{ IMAGE_TAG }}
    restart: always
    container_name: fio-server
    env_file: /data/fio/fio-relic-server/config/fio-server.env
    hostname: backend
    networks:
      - app-network
    expose:
      - {{ BACKEND_TCP_PORT }}
    ports:
      - {{ BACKEND_TCP_PORT }}:9090/tcp

  fio-client:
    image: {{ IMAGE_PREFIX_CLIENT }}:{{ IMAGE_TAG }}
    restart: always
    container_name: fio-client
    env_file: /data/fio/fio-relic-server/config/fio-client.env
    hostname: frontend
    expose:
      - 80
    ports:
      - 80:80/tcp
    depends_on:
      - fio-server
    networks:
      - app-network
  
networks:
  app-network:
    name: app-network
    driver: bridge     
 
